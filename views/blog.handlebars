<div class="text-center">
  <h2>{{name}}</h2>
  <p>{{description}}</p>
  <p>Created by {{user.name}} on {{format_date date_created}}</p>
  <p>Updated by {{user.name}} on {{format_date date_updated}}</p>
  <p>
    {{comments}}
    {{#if logged_in}}
      <form>
        <div class="form-group">
          <label for="comment">Comment:</label>
          <textarea name="comment" id="comment" cols="30" rows="10" placeholder="Type up your thoughts here."></textarea>
        </div>
        <div class="form-group">
        <button type="submit">Submit</button>
        <button type="submit"></button><a href="/blog/edit/{{id}}">Edit</a></button>
        <button type="submit"><a href="/blog/delete/{{id}}">Delete</a></button>
        </div>
      </form>
    {{/if}}
    {{else}}
      <p>Got to be <a href="/login">logged in</a> to post!</p>
    {{/if}}
  </p>
</div>
